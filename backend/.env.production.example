# Backend Production Environment Variables
# Copy this file to .env and fill in the values

# Server
NODE_ENV=production
PORT=4000

# Database (MongoDB Atlas)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/chahrity?retryWrites=true&w=majority

# JWT Authentication
# IMPORTANT: Use strong, unique secrets in production (32+ random characters)
JWT_ACCESS_SECRET=your-strong-access-secret-here
JWT_REFRESH_SECRET=your-strong-refresh-secret-here
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS - Frontend Domain
FRONTEND_URL=https://chahrity.com

# Cookie Settings (for cross-origin auth)
# SameSite=None is required for cross-origin cookies with Secure=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=None
